{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "GPT AUDIO",
    "description": "Extension to put audio in chatgpt with one click",
    "author": "Claudio vers√£o - 14/03/2023",
    "browser_action": {
   	 "default_title": "Content",
   	 "default_icon": "icon.png"
    },
    "content_scripts":[
        {
            "matches":  ["https://chat.openai.com/*"],
            "js": ["content.js"]
        }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "options_ui":{
        "open_in_tab": true,
        "browser_style": true,
		"chrome_style": true,
        "page": "option.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ] 
    
}